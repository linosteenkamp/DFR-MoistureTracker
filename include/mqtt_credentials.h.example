/**
 * @file mqtt_credentials.h.example
 * @brief MQTT broker credentials template
 * 
 * This is a template file for MQTT credentials.
 * 
 * To use:
 * 1. Copy this file to mqtt_credentials.h
 * 2. Update the values with your actual MQTT broker details
 * 3. Never commit mqtt_credentials.h to git (it's in .gitignore)
 * 
 * Usage:
 *   cp include/mqtt_credentials.h.example include/mqtt_credentials.h
 *   # Edit mqtt_credentials.h with your credentials
 */

#ifndef MQTT_CREDENTIALS_H
#define MQTT_CREDENTIALS_H

// MQTT Broker Configuration
#define MQTT_BROKER_URI      "mqtt://your-broker-address.com"
#define MQTT_USERNAME        "your-username"
#define MQTT_PASSWORD        "your-password"

// MQTT Topic Configuration
#define MQTT_TOPIC_PREFIX    "zigbee2mqtt/"
#define MQTT_KEEPALIVE_SEC   10

#endif // MQTT_CREDENTIALS_H
